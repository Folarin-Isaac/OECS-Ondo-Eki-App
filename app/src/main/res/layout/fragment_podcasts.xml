<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/background_color"
    android:backgroundTintMode="src_atop"
    android:background="@drawable/screen_background"
    tools:context=".PodcastsFragment">

    <include
        android:id="@+id/app_bar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        layout="@layout/app_bar_main"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/podcasts_card"
        android:layout_width="0dp"
        android:layout_height="90dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/app_bar"
        android:layout_marginTop="25dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:background="@color/background_color"
        android:elevation="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/podcast_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="25dp"
                android:src="@drawable/ic_icon_awesome_podcastbig"/>

            <TextView
                android:id="@+id/ecs_fun_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/podcast_icon"
                android:layout_alignParentTop="true"
                android:textSize="15sp"
                android:layout_marginTop="30dp"
                android:layout_marginStart="@dimen/margin_20dp"
                android:textColor="@color/end_color"
                android:textAllCaps="true"
                android:text="@string/ecs_fun_time"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/podcast_icon"
                android:layout_marginStart="@dimen/margin_20dp"
                android:layout_below="@id/ecs_fun_time"
                android:textColor="@color/black"
                android:textStyle="italic"
                android:textSize="15sp"
                android:text="@string/ecs_time"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/margin_20dp"
                android:layout_alignParentBottom="true"
                android:src="@drawable/ic_baseline_play_arrow"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/lifetunes_card"
        android:layout_width="0dp"
        android:layout_height="90dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/podcasts_card"
        android:layout_marginTop="25dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:background="@color/background_color"
        android:elevation="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/podcast_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="25dp"
                android:src="@drawable/ic_icon_awesome_podcastbig"/>

            <TextView
                android:id="@+id/life_tunes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/podcast_image"
                android:layout_alignParentTop="true"
                android:textSize="15sp"
                android:layout_marginTop="30dp"
                android:layout_marginStart="@dimen/margin_20dp"
                android:textColor="@color/end_color"
                android:textAllCaps="true"
                android:text="@string/life_tune"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/podcast_image"
                android:layout_marginStart="@dimen/margin_20dp"
                android:layout_below="@id/life_tunes"
                android:textColor="@color/black"
                android:textStyle="italic"
                android:textSize="15sp"
                android:text="@string/ecs_time"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/margin_20dp"
                android:layout_alignParentBottom="true"
                android:src="@drawable/ic_baseline_play_arrow"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/jolly_funks_card"
        android:layout_width="0dp"
        android:layout_height="90dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/lifetunes_card"
        android:layout_marginTop="25dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:background="@color/background_color"
        android:elevation="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/podcast_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="25dp"
                android:src="@drawable/ic_icon_awesome_podcastbig"/>

            <TextView
                android:id="@+id/jolly_funks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/podcast_img"
                android:layout_alignParentTop="true"
                android:textSize="15sp"
                android:layout_marginTop="30dp"
                android:layout_marginStart="@dimen/margin_20dp"
                android:textColor="@color/end_color"
                android:textAllCaps="true"
                android:text="@string/jolly_funks"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/podcast_img"
                android:layout_marginStart="@dimen/margin_20dp"
                android:layout_below="@id/jolly_funks"
                android:textColor="@color/black"
                android:textStyle="italic"
                android:textSize="15sp"
                android:text="@string/ecs_time"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/margin_20dp"
                android:layout_alignParentBottom="true"
                android:src="@drawable/ic_baseline_play_arrow"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/family_talk_card"
        android:layout_width="0dp"
        android:layout_height="90dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/jolly_funks_card"
        android:layout_marginTop="25dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:background="@color/background_color"
        android:elevation="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/podcast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="25dp"
                android:src="@drawable/ic_icon_awesome_podcastbig"/>

            <TextView
                android:id="@+id/family_talk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/podcast"
                android:layout_alignParentTop="true"
                android:textSize="15sp"
                android:layout_marginTop="30dp"
                android:layout_marginStart="@dimen/margin_20dp"
                android:textColor="@color/end_color"
                android:textAllCaps="true"
                android:text="@string/family_talks"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/podcast"
                android:layout_marginStart="@dimen/margin_20dp"
                android:layout_below="@id/family_talk"
                android:textColor="@color/black"
                android:textStyle="italic"
                android:textSize="15sp"
                android:text="@string/family_time"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/margin_20dp"
                android:layout_alignParentBottom="true"
                android:src="@drawable/ic_baseline_play_arrow"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/music_stream_card"
        android:layout_width="0dp"
        android:layout_height="90dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/family_talk_card"
        android:layout_marginTop="25dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:background="@color/background_color"
        android:elevation="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/podcast_live"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="25dp"
                android:src="@drawable/ic_icon_awesome_podcastbig"/>

            <TextView
                android:id="@+id/music_stream"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/podcast_live"
                android:layout_alignParentTop="true"
                android:textSize="15sp"
                android:layout_marginTop="30dp"
                android:layout_marginStart="@dimen/margin_20dp"
                android:textColor="@color/end_color"
                android:textAllCaps="true"
                android:text="@string/music_streams"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/podcast_live"
                android:layout_marginStart="@dimen/margin_20dp"
                android:layout_below="@id/music_stream"
                android:textColor="@color/black"
                android:textStyle="italic"
                android:textSize="15sp"
                android:text="@string/stream_time"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/margin_20dp"
                android:layout_alignParentBottom="true"
                android:src="@drawable/ic_baseline_play_arrow"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/music_stream_card"
        android:layout_marginTop="@dimen/margin_20dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:text="@string/show_more"
        android:textStyle="italic"/>








</androidx.constraintlayout.widget.ConstraintLayout>